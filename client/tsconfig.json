{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "../tsdist/client",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@dux/*": ["dux/*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "typeRoots": ["types/**/*", "node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
