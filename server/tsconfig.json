{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "declarationDir": "dist/@types",
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@generated/*": ["./generated/*"],
      "@graphql/*": ["./graphql/*"],
      "@models/*": ["./models/*"],
      "@resolvers/*": ["./resolvers/*"],
      "@test/*": ["./test/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["server_rest.ts"]
}
