{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["types/**/*", "node_modules/@types"]
  },
  "exclude": ["controllers/", "server_rest.ts"]
}
