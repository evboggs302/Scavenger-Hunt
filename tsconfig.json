{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": false,
    "noEmit": false,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "client",
    "paths": {
      "@dux/*": ["dux/*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": [
      ".client/types/**/*",
      ".client/node_modules/@types",
      ".server/types/**/*",
      ".server/node_modules/@types"
    ]
  },
  "include": ["client", "server"],
  "exclude": ["node_modules"]
}
